{
  "manifest_version": 2,

  "name": "Nhymxu - Social ghost",
  "version": "0.3.0",
  "description": "Blocks \"seen\" marks on Facebook Stories and Instagram Stories.",

  "background": {
    "scripts": ["index.js"],
    "persistent": true
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "*://*.facebook.com/*",
    "*://*.instagram.com/*"
  ],
  "browser_action": {
    "default_icon": "icon-disabled.png",
    "default_title": "Nhymxu - Social ghost",
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon-enabled.png"
  },
  "developer": {
    "name": "Dung Nguyen (nhymxu)",
    "url": "https://dungnt.net"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "nhymxu-social-ghost@social.ghost"
    },
    "gecko_android": {
      "id": "nhymxu-social-ghost@social.ghost"
    }
  }
}